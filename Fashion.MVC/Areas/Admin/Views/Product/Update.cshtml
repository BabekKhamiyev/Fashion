@using Fashion.BL.ViewModels
@using Fashion.DAL.Models
@using Fashion.MVC.ViewModels
@model UpdateProductVM

<div class="bg-secondary rounded h-100 p-4">
    <h6 class="mb-4">Create</h6>
    <form asp-area="Admin" asp-controller="Product" asp-action="Update" method="post" enctype="multipart/form-data">

        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Name</label>
            <input asp-for="Name" class="form-control" id="exampleInputPassword1">
        </div>
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">ShortDescription</label>
            <input asp-for="ShortDescription" class="form-control" id="exampleInputPassword1">
        </div>
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Price</label>
            <input asp-for="Price" class="form-control" id="exampleInputPassword1">
        </div>
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">ImgFile</label>
            <input asp-for="ImgFile"  class="form-control" id="exampleInputPassword1">
        </div>

        <input type="hidden" asp-for="Id"   />
        <button type="submit" class="btn btn-primary">Update</button>
    </form>
</div>