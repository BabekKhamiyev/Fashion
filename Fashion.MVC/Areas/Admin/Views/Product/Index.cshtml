@using Fashion.DAL.Models
@model List<Product>

<div class="card-body">
    <h4 class="card-title">Order Status</h4>
    <div class="table-responsive">
        <table class="table">
            <thead>

                <tr>

                    <th> Id </th>
                    <th> ImgUrl </th>
                    <th> Name </th>
                    <th> ShortDescription </th>
                    <th> Price </th>

                    <th> elave </th>
                </tr>
            </thead>
            <tbody>


                @if(Model is not null)
                    foreach(var item in Model)
                    {
                        <tr>

                           
                            <td> @item.Id </td>
                            <td> <img src="~/assets/UploadedImages/@item.Imgurl">  </td>
                            <td> @item.Name </td>
                            <td> @item.ShortDescription </td>
                            <td> @item.Price </td>
                            <td>
                                <form asp-action="Delete" asp-controller="Product" method="post" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" class="btn btn-danger btn-rounded btn-fw">
                                        Delete
                                    </button>
                                </form>                                <a asp-area="Admin" asp-controller="Product" asp-action="Info" asp-route-id="@item.Id" class="btn btn-info m-2">Info</a>
                                <a asp-area="Admin" asp-controller="Product" asp-action="Update" asp-route-id="@item.Id"  class="btn btn-light m-2">Update</a>

                            </td>
                        </tr>



                    }
             
              
                


            </tbody>
        </table>
    </div>
</div>


